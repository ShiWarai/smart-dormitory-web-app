    <div class="carousel slide carousel-dark d-flex flex-grow-1" data-bs-ride="false" data-bs-keyboard="false" id="carousel-pages" style="padding-top: 26px;height: 100%;padding-bottom: 26px;">
        <div class="carousel-inner" style="height: 100%;">
